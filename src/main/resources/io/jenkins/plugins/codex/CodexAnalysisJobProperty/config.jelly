<?xml version="1.0" encoding="UTF-8"?>
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

    <f:section title="Codex Analysis Plugin Configuration">
        <f:entry title="Use Job-Level Configuration" field="useJobConfig" description="Enable job-specific configuration. If disabled, global configuration will be used.">
            <f:checkbox default="false" />
        </f:entry>

        <f:advanced>
            <f:entry title="Codex CLI Path" field="codexCliPath" description="Path to the Codex CLI executable. Leave empty to use global configuration.">
                <f:textbox />
            </f:entry>

            <f:entry title="Codex CLI Download URL" field="codexCliDownloadUrl" description="Download URL for Codex CLI on Ubuntu/CentOS systems. Optional configuration - leave empty to use global configuration or if CLI is already installed.">
                <f:textbox />
            </f:entry>

            <f:entry title="Codex CLI Download Username" field="codexCliDownloadUsername" description="Username for authenticated download URL. Leave empty to use global configuration.">
                <f:textbox />
            </f:entry>

            <f:entry title="Codex CLI Download Password" field="codexCliDownloadPassword" description="Password for authenticated download URL. Leave empty to use global configuration.">
                <f:password />
            </f:entry>

            <f:entry title="Config Path" field="configPath" description="Path to Codex configuration file. Leave empty to use global configuration.">
                <f:textbox />
            </f:entry>


            <f:entry title="Default Model" field="defaultModel" description="Default model to use for analysis. Leave empty to use global configuration.">
                <f:select />
            </f:entry>

            <f:entry title="Timeout (seconds)" field="timeoutSeconds" description="Default timeout for analysis operations in seconds. Leave empty to use global configuration.">
                <f:number min="10" max="3600" />
            </f:entry>

            <f:entry title="Enable MCP Servers" field="enableMcpServers" description="Enable Model Context Protocol servers for enhanced analysis capabilities">
                <f:checkbox default="true" />
            </f:entry>

            <f:entry title="MCP Servers" field="selectedMcpServers" description="Select MCP servers from those configured in ~/.codex/config.toml. Leave empty to use global configuration. Only shown when 'Enable MCP Servers' is checked.">
                <f:select multiple="true" />
            </f:entry>

            <f:entry title="LiteLLM API Key" field="litellmApiKey" description="API key for LiteLLM service. Leave empty to use global configuration.">
                <f:textbox />
            </f:entry>
        </f:advanced>
    </f:section>

    <f:section title="CLI Management">
        <f:entry title="Test Codex CLI" description="Test the Codex CLI configuration on the node where this job will run. This ensures proper node binding and CLI accessibility.">
            <f:validateButton title="Test Codex CLI"
                             method="doTestCodexCli"
                             with="codexCliPath,codexCliDownloadUrl,codexCliDownloadUsername,codexCliDownloadPassword,configPath,litellmApiKey" />
        </f:entry>

        <f:entry title="Update Codex CLI" description="Manually download and update the Codex CLI from the configured download URL. Requires a valid download URL to be configured.">
            <f:validateButton title="Update CLI"
                             method="doUpdateCodexCli"
                             with="codexCliPath,codexCliDownloadUrl,codexCliDownloadUsername,codexCliDownloadPassword" />
        </f:entry>
    </f:section>

</j:jelly>
