<?xml version="1.0" encoding="UTF-8"?>
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

<l:layout title="Codex Analysis - ${it.stageName}">
    <l:header>
        <st:include it="${it.run}" page="sidepanel.jelly" />
        <link rel="stylesheet" href="${resURL}/plugin/codex-analysis/css/codex-analysis.css" />
    </l:header>

    <l:main-panel>
        <h1>
            <l:icon class="icon-codex-analysis icon-md" />
            Codex Analysis - ${it.stageName}
        </h1>

        <div class="codex-analysis-container">
            <div class="analysis-header">
                <div class="analysis-info">
                    <p><strong>Stage:</strong> ${it.stageName}</p>
                    <p><strong>Analysis Type:</strong> ${it.analysisType}</p>
                    <p><strong>Timestamp:</strong> ${it.timestamp}</p>
                    <p><strong>Status:</strong>
                        <span class="analysis-status ${it.hasIssues() ? 'has-issues' : 'no-issues'}">
                            ${it.hasIssues() ? 'Issues Found' : 'No Issues'}
                        </span>
                    </p>
                    <j:if test="${it.hasIssues()}">
                        <p><strong>Issue Count:</strong> ${it.getIssueCount()}</p>
                    </j:if>
                </div>
            </div>

            <div class="analysis-summary">
                <h3>Analysis Summary</h3>
                <div class="summary-content">
                    ${it.getAnalysisSummary()}
                </div>
            </div>

            <div class="analysis-details">
                <h3>Detailed Analysis</h3>
                <div class="analysis-content">
                    <pre>${it.analysisResult}</pre>
                </div>
            </div>
        </div>

        <style>
            .codex-analysis-container {
                margin: 20px 0;
            }

            .analysis-header {
                background: #f5f5f5;
                padding: 15px;
                border-radius: 5px;
                margin-bottom: 20px;
            }

            .analysis-info p {
                margin: 5px 0;
            }

            .analysis-status {
                padding: 3px 8px;
                border-radius: 3px;
                font-weight: bold;
            }

            .analysis-status.has-issues {
                background: #ffebee;
                color: #c62828;
            }

            .analysis-status.no-issues {
                background: #e8f5e8;
                color: #2e7d32;
            }

            .analysis-summary, .analysis-details {
                margin: 20px 0;
            }

            .summary-content {
                background: #f9f9f9;
                padding: 15px;
                border-left: 4px solid #2196f3;
                border-radius: 3px;
            }

            .analysis-content {
                background: #f9f9f9;
                padding: 15px;
                border-radius: 5px;
                border: 1px solid #ddd;
            }

            .analysis-content pre {
                white-space: pre-wrap;
                word-wrap: break-word;
                margin: 0;
                font-family: 'Courier New', monospace;
                font-size: 12px;
                line-height: 1.4;
            }
        </style>
    </l:main-panel>
</l:layout>

</j:jelly>
