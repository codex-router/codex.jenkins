<?xml version="1.0" encoding="UTF-8"?>
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

    <f:section title="Codex Analysis Plugin Configuration">
        <f:entry title="Codex CLI Path" field="codexCliPath" description="Path to the Codex CLI executable. Default: '~/.local/bin/codex'">
            <f:textbox default="~/.local/bin/codex" />
        </f:entry>

        <f:entry title="Codex CLI Download URL" field="codexCliDownloadUrl" description="Download URL for Codex CLI on Ubuntu/CentOS systems. Optional configuration - leave empty if CLI is already installed or will be installed manually.">
            <f:textbox />
        </f:entry>

        <f:entry title="Codex CLI Download Username" field="codexCliDownloadUsername" description="Username for authenticated download URL. Optional configuration.">
            <f:textbox />
        </f:entry>

        <f:entry title="Codex CLI Download Password" field="codexCliDownloadPassword" description="Password for authenticated download URL. Optional configuration.">
            <f:password />
        </f:entry>

        <f:entry title="Config Path" field="configPath" description="Path to Codex configuration file. Default: '~/.codex/config.toml'">
            <f:textbox default="~/.codex/config.toml" />
        </f:entry>


        <f:entry title="Default Model" field="defaultModel" description="Default model to use for analysis. Default: 'kimi-k2'">
            <f:select />
            <f:validateButton title="Update Model List" progress="Fetching available models from Codex CLI..."
                             method="doFetchAvailableModels" with="codexCliPath" />
            <div style="margin-top: 5px; font-size: 11px; color: #666;">
                ${instance.modelCacheStatus}
            </div>
        </f:entry>

        <f:entry title="Timeout (seconds)" field="timeoutSeconds" description="Default timeout for analysis operations in seconds. Default: 120">
            <f:number default="120" min="10" max="3600" />
        </f:entry>

        <f:entry title="Enable MCP Servers" field="enableMcpServers" description="Enable Model Context Protocol servers for enhanced analysis capabilities">
            <f:checkbox default="true" />
        </f:entry>

        <f:entry title="MCP Servers" field="selectedMcpServers" description="Select MCP servers from those configured in ~/.codex/config.toml. Only shown when 'Enable MCP Servers' is checked.">
            <f:select multiple="true" />
            <f:validateButton title="Update MCP Servers List" progress="Fetching available MCP servers from Codex CLI..."
                             method="doFetchAvailableMcpServers" with="codexCliPath,configPath" />
            <div style="margin-top: 5px; font-size: 11px; color: #666;">
                ${instance.mcpServersCacheStatus}
            </div>
        </f:entry>

        <f:entry title="LiteLLM API Key" field="litellmApiKey" description="API key for LiteLLM service. Default: 'sk-1234'">
            <f:textbox default="sk-1234" />
        </f:entry>
    </f:section>

</j:jelly>
